{
  "name": "ai-content-agent-backend",
  "version": "1.0.0",
  "description": "AI Content Agent Backend - Automated blog writing and publishing system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/dev-server.ts",
    "dev:server": "tsx watch src/server.ts",
    "build": "tsc --build && tsc-alias",
    "build:dev": "tsc -p tsconfig.dev.json && tsc-alias -p tsconfig.dev.json",
    "build:prod": "tsc -p tsconfig.prod.json && tsc-alias -p tsconfig.prod.json",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ai-content-backend",
    "pm2:restart": "pm2 restart ai-content-backend",
    "pm2:logs": "pm2 logs ai-content-backend",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:prod": "eslint . --ext .ts,.tsx --max-warnings 0 || true",
    "typecheck": "tsc --noEmit",
    "migrate": "node dist/utils/migrate.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "install:legacy": "npm install --legacy-peer-deps"
  },
  "keywords": [
    "ai",
    "content",
    "automation",
    "wordpress",
    "facebook",
    "marketing"
  ],
  "author": "AI Content Agent Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.55.0",
    "@google/generative-ai": "^0.11.4",
    "@langchain/community": "^0.2.0",
    "@langchain/core": "^0.2.36",
    "@langchain/openai": "^0.2.0",
    "@mozilla/readability": "^0.6.0",
    "@pinecone-database/pinecone": "^2.2.0",
    "@playwright/test": "^1.53.1",
    "@supabase/supabase-js": "^2.39.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cheerio": "^0.22.35",
    "@types/express-session": "^1.18.2",
    "@types/jsdom": "^21.1.7",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "argon2": "^0.40.3",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.15.4",
    "cheerio": "^1.1.0",
